swagger: '2.0'
info:
  title: API de Gesti√≥n de Usuarios
  version: 1.0.0
basePath: /api
schemes:
  - http
paths:
  /usuarios:
    post:
      summary: Crea un nuevo usuario
      consumes:
        - application/json
      produces:
        - application/json
      parameters:
        - in: body
          name: usuario
          description: Datos del nuevo usuario
          schema:
            $ref: '#/definitions/Usuario'
      responses:
        '200':
          description: Usuario creado exitosamente
          schema:
            $ref: '#/definitions/Usuario'
definitions:
  Usuario:
    type: object
    properties:
      id:
        type: integer
      nombre:
        type: string
      fechaNacimiento:
        type: string
        format: date
      correoElectronico:
        type: string
